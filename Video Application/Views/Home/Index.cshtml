@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <button type="button" id="uploadFormBtn">Upload</button>
    <button type="button" id="catalogueViewBtn">Catalogue</button>
</div>

<div id="componentContainer"> 

</div>

@section Scripts {
<script>

        document.getElementById("uploadFormBtn").addEventListener("click", function () {
            fetch('/Home/GetUploadViewComponent')
                .then(response => response.text())
                .then(data => {
                    document.getElementById("componentContainer").innerHTML = data;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });

        document.getElementById("catalogueViewBtn").addEventListener("click", function () {
            fetch('/Home/GetCatalogueViewComponent')
                .then(response => response.text())
                .then(data => {
                    document.getElementById("componentContainer").innerHTML = data;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });


</script>
}
